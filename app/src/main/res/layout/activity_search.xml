<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context=".activity.SearchActivity">

        <!-- Toolbar với SearchView -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/Green2"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <EditText
                android:id="@+id/edtSearch"
                android:layout_width="300dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:background="@drawable/search"
                android:drawableStart="@drawable/ic_search"
                android:gravity="center"
                android:drawableTint="@color/black"
                android:paddingStart="20dp"
                android:hint="Tìm Kiếm Bài Hát"
                app:iconifiedByDefault="false"
                app:queryBackground="@android:color/transparent" />
        </androidx.appcompat.widget.Toolbar>

        <!-- Gợi ý tìm kiếm -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp"
            android:text="Đề xuất cho bạn"
            android:textSize="18sp"
            android:textStyle="bold" />

        <!-- Danh sách gợi ý tìm kiếm -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Gợi ý 1 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="không ra gì"
                android:textSize="16sp" />

            <!-- Gợi ý 2 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="trình"
                android:textSize="16sp" />

            <!-- Gợi ý 3 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="anh đau từ lúc em đi"
                android:textSize="16sp" />

            <!-- Gợi ý 4 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="nơi vực nơi trời"
                android:textSize="16sp" />

            <!-- Gợi ý 5 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="#zingchart"
                android:textSize="16sp" />

            <!-- Gợi ý 6 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="hôm nay nghe gì"
                android:textSize="16sp" />

            <!-- Gợi ý 7 -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="thư giãn"
                android:textSize="16sp" />

        </LinearLayout>
    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:headerLayout="@layout/header"
        app:menu="@menu/main_menu" />
</androidx.drawerlayout.widget.DrawerLayout>

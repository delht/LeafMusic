<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@color/Den"
    android:id="@+id/fragment_container"

    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/XanhSua"
        android:text="Cài đặt tài khoản"
        android:textSize="10pt"
        android:layout_gravity="center"
        android:layout_marginBottom="12pt"
        android:textStyle="bold"
        />

    <Button
        android:id="@+id/btnDoiThongTin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Cập nhật thông tin tài khoản"
        android:textSize="10pt"
        android:backgroundTint="@color/XanhLuc"
        />

    <Button
        android:id="@+id/btnDoiMatKhau"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:textSize="10pt"
        android:backgroundTint="@color/XanhLuc"
        />

</LinearLayout>

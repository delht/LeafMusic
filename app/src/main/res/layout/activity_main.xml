<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <View
        android:id="@+id/viewTop"

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Green2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
       />


    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/viewTop2"
        android:background="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop"
        />


    <View
        android:id="@+id/divider"

        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/grey"


        app:layout_constraintTop_toBottomOf="@id/viewTop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvName"

        android:text="LeafMusic"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:gravity="center"

        android:layout_width="150dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        app:layout_constraintEnd_toStartOf="@+id/edtSearch" />


    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtSearch"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Tìm Kiếm"
        android:inputType="text"
        android:padding="14dp"


        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        app:layout_constraintEnd_toStartOf="@id/btnPerson"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        android:id="@+id/btnHome"
        android:drawablePadding="30dp"

        app:layout_constraintStart_toStartOf="@+id/tvName"
        app:layout_constraintTop_toTopOf="@id/viewTop2"
        app:layout_constraintBottom_toBottomOf="@id/viewTop2"
        android:padding="8dp"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_listmusic"
        android:id="@+id/btnList"

        app:layout_constraintStart_toEndOf="@id/btnHome"
        app:layout_constraintTop_toTopOf="@id/viewTop2"
        app:layout_constraintBottom_toBottomOf="@id/viewTop2"
        android:padding="8dp"/>


    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:id="@+id/btnPerson"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/viewTop2"
        app:layout_constraintBottom_toBottomOf="@id/viewTop2"
        app:layout_constraintEnd_toEndOf="@id/viewTop2" />

    <View
        android:id="@+id/viewMain"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>
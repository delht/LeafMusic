<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/viewTop"
        android:background="@color/Green2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_home"
        android:id="@+id/btnHome"
        android:drawablePadding="30dp"
        app:layout_constraintEnd_toStartOf="@+id/btnList"
        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        android:padding="8dp"/>
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_listmusic"
        android:id="@+id/btnList"
        app:layout_constraintStart_toEndOf="@id/btnHome"
        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        android:padding="8dp"/>
    <EditText
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/edtSearch"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Search music"
        android:inputType="text"
        android:padding="14dp"
        app:layout_constraintStart_toEndOf="@id/btnList"
        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintEnd_toStartOf="@id/btnPerson"/>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_person"
        android:id="@+id/btnPerson"
        android:padding="8dp"
        app:layout_constraintTop_toTopOf="@id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        app:layout_constraintStart_toEndOf="@id/edtSearch"
        app:layout_constraintEnd_toEndOf="@id/viewTop" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/Den">


    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="120dp" />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="QUÊN MẬT KHẨU"
        android:textSize="10pt"
        android:paddingBottom="16dp"
        android:textStyle="bold"
        android:gravity="center"
        android:textColor="@color/XanhSua"
        />

    <!-- Trường nhập Email -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/edtEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:hint="Nhập email đã đăng ký"
            android:inputType="textEmailAddress"
            android:textColorHint="@color/XanhSua"
            android:layout_marginTop="10pt"
            android:paddingEnd="40pt"
            android:textColor="@color/XanhSua"
            />

        <Button
            android:id="@+id/btnSendCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Lấy mã"
            android:layout_marginTop="10pt"
            android:backgroundTint="@color/XanhMa"
            />

    </LinearLayout>


    <!-- Trường nhập mã xác nhận -->
    <EditText
        android:id="@+id/edtCode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mã xác nhận"
        android:inputType="text"
        android:textColorHint="@color/XanhSua"
        android:layout_marginTop="10pt"
        android:textColor="@color/XanhSua"
        />

    <!-- Trường nhập mật khẩu mới -->
    <EditText
        android:id="@+id/edtNewPass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nhập mật khẩu mới"
        android:inputType="textPassword"
        android:textColorHint="@color/XanhSua"
        android:layout_marginTop="10pt"
        android:textColor="@color/XanhSua"
        />

    <!-- Nút đổi mật khẩu -->
    <Button
        android:id="@+id/btnReset"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Đổi mật khẩu"
        android:layout_marginTop="10pt"
        android:backgroundTint="@color/XanhLuc"
        />

</LinearLayout>

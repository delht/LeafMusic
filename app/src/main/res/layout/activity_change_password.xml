<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/Den"
    android:padding="16dp">

    <!-- View Top (giống như một không gian trống) -->
    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="120dp" />

    <!-- Tiêu đề "Đổi mật khẩu" -->
    <TextView
        android:id="@+id/tvTopText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ĐỔI MẬT KHẨU"
        android:gravity="center"
        android:textColor="@color/XanhSua"
        android:textSize="30sp"
        android:textStyle="bold"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />

    <!-- EditText cho mật khẩu cũ -->
    <EditText
        android:id="@+id/edtCu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/XanhSua"
        android:textColorHint="@color/XanhSua"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:hint="Mật khẩu cũ"
        android:inputType="textPassword"
        android:padding="16dp" />

    <!-- EditText cho mật khẩu mới -->
    <EditText
        android:id="@+id/edtMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/XanhSua"
        android:textColorHint="@color/XanhSua"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:hint="Mật khẩu mới"
        android:inputType="textPassword"
        android:padding="16dp" />

    <!-- EditText cho nhập lại mật khẩu mới -->
    <EditText
        android:id="@+id/edtReMoi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="12dp"
        android:textColor="@color/XanhSua"
        android:textColorHint="@color/XanhSua"
        android:drawableStart="@drawable/ic_lock"
        android:drawablePadding="16dp"
        android:hint="Nhập lại mật khẩu mới"
        android:inputType="textPassword"
        android:padding="16dp" />

    <TextView
        android:id="@+id/tvQuenMK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quên mật khẩu"
        android:textSize="7pt"
        android:textColor="@color/XanhMa"
        android:gravity="center"
        />

    <!-- Button đổi mật khẩu -->
    <Button
        android:id="@+id/btnRegister"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:backgroundTint="@color/Green2"
        android:text="Đổi mật khẩu"
        android:textSize="18sp"
        android:textStyle="bold" />

</LinearLayout>

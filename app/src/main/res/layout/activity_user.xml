<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserActivity">

    <View
        android:id="@+id/viewTop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/Green2"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />


    <View
        android:id="@+id/viewTop2"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="@color/white"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/viewTop" />


    <View
        android:id="@+id/divider"
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/grey"


        app:layout_constraintTop_toBottomOf="@id/viewTop2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <TextView
        android:id="@+id/tvUser"
        android:text="Cá Nhân"
        android:textSize="24dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_weight="1"
        android:gravity="center"

        android:layout_width="150dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@+id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"

        />

    <EditText
        android:id="@+id/edtSearch"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_search"
        android:drawablePadding="16dp"
        android:ems="10"
        android:hint="Tìm Kiếm"
        android:inputType="text"
        android:padding="14dp"

        app:layout_constraintStart_toEndOf="@+id/tvUser"/>

    <EditText
        android:id="@+id/edtBell"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_notifications"

        app:layout_constraintTop_toTopOf="@+id/viewTop"
        app:layout_constraintBottom_toBottomOf="@id/viewTop"
        app:layout_constraintEnd_toEndOf="@+id/viewTop"
        android:layout_marginEnd="10dp"/>


   <EditText
       android:id="@+id/ivUser"
       android:layout_width="0dp"
       android:layout_height="wrap_content"
       android:drawableStart="@drawable/ic_circle"

       app:layout_constraintStart_toStartOf="@+id/tvUser"
       app:layout_constraintTop_toTopOf="@+id/viewTop2"
       app:layout_constraintBottom_toBottomOf="@id/viewTop2"/>
    <TextView
        android:id="@+id/tvNameUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="UserName"
        android:textColor="@color/black"
        android:textStyle="bold"

        app:layout_constraintTop_toTopOf="@id/viewTop2"
        app:layout_constraintBottom_toBottomOf="@id/viewTop2"
        app:layout_constraintStart_toEndOf="@id/ivUser"/>

    <EditText
        android:id="@+id/edtPerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_person2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/viewTop2"/>

    <TextView
        android:id="@+id/tvList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh Sách Quan Tâm "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="45dp"
        android:layout_marginStart="10dp"

        app:layout_constraintTop_toBottomOf="@+id/viewTop2"
        app:layout_constraintStart_toEndOf="@+id/edtPerson"/>

    <EditText
        android:id="@+id/edtListFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_favoritemusic"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/edtPerson"/>

    <TextView
        android:id="@+id/tvFavorite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh Sách Yêu Thích "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvList"
        app:layout_constraintStart_toEndOf="@+id/edtListFavorite"/>

    <EditText
    android:id="@+id/edtLogOut"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:drawableStart="@drawable/ic_output"
    android:layout_marginTop="10dp"
    app:layout_constraintTop_toBottomOf="@+id/edtListFavorite"/>

    <TextView
        android:id="@+id/tvLogOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đăng Xuất "
        android:textColor="@color/black"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        android:layout_marginStart="10dp"

        app:layout_constraintTop_toBottomOf="@+id/tvFavorite"
        app:layout_constraintStart_toEndOf="@+id/edtListFavorite"/>

</androidx.constraintlayout.widget.ConstraintLayout>
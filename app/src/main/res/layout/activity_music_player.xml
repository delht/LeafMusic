<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layoutDirection="rtl"
    tools:openDrawer="end"
    android:background="@android:color/black">

    <!-- Layout chính -->
    <LinearLayout
        android:id="@+id/rootLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layoutDirection="ltr"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Nút back -->
        <ImageButton
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_down"
            android:backgroundTint="@color/black"
            android:layout_marginTop="16dp"
            app:tint="@color/white" />

        <!-- Text "Single" -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Single"
            android:textColor="@android:color/white"
            android:gravity="center"
            android:textSize="18sp"
            android:layout_marginTop="8dp" />

        <!-- Album Art -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/imgSong"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_gravity="center"
            android:layout_marginTop="32dp"
            android:scaleType="centerCrop" />

        <!-- Thêm vào sau ImageView của album art -->
        <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- Song Info -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="bottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tvSongName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/white"
                    android:textSize="24sp"
                    android:textStyle="bold" />

                <ImageButton
                    android:id="@+id/btnFavorite"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/ic_favorite"
                    android:background="@color/black"
                    app:tint="@color/white" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tvArtist"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@android:color/darker_gray"
                android:textSize="16sp"
                android:layout_marginTop="4dp" />

            <!-- Seek Bar -->
            <SeekBar
                android:id="@+id/seekBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:progressTint="@android:color/white"
                android:thumbTint="@android:color/white" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp">

                <TextView
                    android:id="@+id/tvCurrentTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/darker_gray"
                    android:text="00:00" />

                <TextView
                    android:id="@+id/tvTotalTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:textColor="@android:color/darker_gray"
                    android:text="00:00" />
            </RelativeLayout>

            <!-- Control Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="32dp">

                <ImageButton
                    android:id="@+id/btnShuffle"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_shuffle"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnPrevious"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_skip_previous"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnPlayPause"
                    android:layout_width="64dp"
                    android:layout_height="64dp"
                    android:src="@drawable/ic_pause"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnNext"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_skip_next"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1"
                    app:tint="@android:color/white" />

                <ImageButton
                    android:id="@+id/btnRepeat"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/ic_repeat"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:layout_weight="1"
                    app:tint="@android:color/white" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- Layout thông tin chi tiết (drawer bên phải) -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view_detail"
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:layoutDirection="ltr"
        android:fitsSystemWindows="true"
        android:background="@drawable/drawer_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Chi tiết bài hát"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="24dp"/>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Tên bài hát -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/detail_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tên bài hát"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvDetailSongName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Ca sĩ -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/detail_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ca sĩ"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvDetailArtist"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Album -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/detail_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Album"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvDetailAlbum"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Thể loại -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/detail_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Thể loại"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvDetailGenre"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>

                    <!-- Ngày phát hành -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:background="@drawable/detail_item_background"
                        android:padding="16dp"
                        android:layout_marginBottom="8dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Ngày phát hành"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:alpha="0.7"/>

                        <TextView
                            android:id="@+id/tvDetailReleaseDate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                            android:layout_marginTop="4dp"/>
                    </LinearLayout>
                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout> 